{% extends '@YodaEvent/Template/base.html.twig' %}

{% block body %}
    <h1>Event</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if event.time %}{{ event.time|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ event.details }}</td>
            </tr>
            <tr>
                <th>Attendees</th>
                <td>{{ event.attendees|length }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Attendess</h2>

    <ul class="list-group">
        {% for attendee in event.attendees %}
            <li class="list-group-item-success">{{ attendee }}</li>
        {% else %}
            <li class="list-group-item-warning">Nobody yet!</li>
        {% endfor %}
    </ul>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li class="list-group-item">
            <a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        
        <li class="list-group-item">
            <a href="{{ path('event_attend',{'id': event.id}) }}">i want go</a>
        </li>

        <li class="list-group-item">
            <a href="{{ path('event_unattend',{'id': event.id}) }}">i can't go anymore</a>
        </li>
        
        <li class="list-group-item">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
